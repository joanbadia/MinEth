{
    "base": "ETH_BOARD",
    "train_path": "./data/MinEth_TrainingSentences.txt",
    "val_path": "./data/MinEth_ValidationSentences.txt",
    "model_type": "bert-base-uncased",
    "num_classes": 2,
    "freeze_base_layers": false,
    "training": {
    	"output_dir": "training",
      	"seed": 123,
      	"per_device_train_batch_size": 16,
      	"per_device_eval_batch_size": 16,
		"gradient_accumulation_steps": 1,
      	"num_train_epochs": 4,
      	"learning_rate": 1e-4,
      	"weight_decay": 0.05,
      	"warmup_ratio": 0.2,
      	"fp16": true,
      	"eval_strategy": "steps",
		"eval_steps": 50,
      	"save_steps": 50,
      	"logging_steps": 50,
      	"save_total_limit": 3,
      	"load_best_model_at_end": true,
      	"metric_for_best_model": "pr_auc",
      	"greater_is_better": true,
      	"early_stopping_patience": 5,
      	"dataloader_num_workers": 4,
      	"dataloader_pin_memory": true,
      	"max_grad_norm": 1.0,
      	"optim": "adamw_torch",
      	"lr_scheduler_type": "linear",
      	"report_to": "none"
    }
  }
